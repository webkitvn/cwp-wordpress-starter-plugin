{
  "name": "cwp-wordpress-starter-plugin",
  "version": "1.0.0",
  "description": "A modern WordPress plugin starter with Vite, TypeScript, and coding standards enforcement",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "lint": "pnpm lint:js && pnpm lint:styles && pnpm lint:php",
    "lint:js": "eslint src --ext .ts,.tsx",
    "lint:styles": "stylelint \"src/**/*.{css,scss}\"",
    "lint:php": "composer lint",
    "format": "pnpm format:js && pnpm format:styles",
    "format:js": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:styles": "stylelint \"src/**/*.{css,scss}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:php": "composer test",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/wordpress__element": "^2.14.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@wordpress/eslint-plugin": "^17.4.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.4"
  },
  "dependencies": {
    "@wordpress/api-fetch": "^6.48.0",
    "@wordpress/element": "^5.28.0",
    "@wordpress/i18n": "^4.51.0"
  }
}
