{
  "name": "cwp/starter-plugin",
  "description": "A modern WordPress plugin starter with Vite, TypeScript, and coding standards enforcement",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "require": {
    "php": "^7.4|^8.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpunit/phpunit": "^9.5",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "autoload": {
    "psr-4": {
      "CWP\\StarterPlugin\\": "admin/php/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CWP\\StarterPlugin\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": [
      "@php ./vendor/bin/phpcs"
    ],
    "lint:fix": [
      "@php ./vendor/bin/phpcbf"
    ],
    "test": [
      "@php ./vendor/bin/phpunit"
    ],
    "post-install-cmd": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/php-compatibility"
    ],
    "post-update-cmd": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/php-compatibility"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
